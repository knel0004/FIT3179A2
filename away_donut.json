{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "A donut chart showing home team results.",
    "width": 600,
    "height": 400,
    "title": {
    "text": "Away Team Performance in the Selected Year",
    "color": "#ffffff", 
    "font": "Garamond",
    "fontSize": 25
  },
  "view": {"stroke":null},
    "background":"#123499" ,
    "data": {
      "url": "https://raw.githubusercontent.com/knel0004/FIT3179A2/refs/heads/main/away_team.csv",  
      "format": {
        "type": "csv"
      }
    },
    "params": [
      {
        "name": "SelectedTeam",
        "value": "Adelaide",  
        "bind": {
          "input": "select",
          "options": [
            "Greater Western Sydney", "Carlton", "Sydney", "Collingwood", "Richmond", "Geelong",
            "Melbourne", "Essendon", "Hawthorn", "North Melbourne", "Fremantle",
            "Gold Coast", "Adelaide", "St Kilda", "West Coast", "Port Adelaide", "Western Bulldogs"
          ],
          "name": "Select Team: "
        }
      },
      {
        "name": "SelectedYear",
        "value": 2012,
        "bind": {
          "input": "select",
          "options": [2012, 2013, 2014, 2015, 2016, 2017, 2018, 2019, 2020, 2021, 2022, 2023],
          "name": "Select Year: "
        }
      }
    ],
    "transform": [
      {
        "filter": "datum.AwayTeam == SelectedTeam && datum.Year == SelectedYear"
      },
      {
        "aggregate": [
          {
            "op": "count",
            "as": "count"
          }
        ],
        "groupby": ["Result"]
      }
    ],
    "mark": {
      "type": "arc",
      "innerRadius": 50,
      "tooltip": true
    },
    "encoding": {
      "theta": {
        "field": "count",
        "type": "quantitative"
      },
      "color": {
        "field": "Result",
        "type": "nominal",
        "scale": {
          "domain": ["win", "lost", "draw"],
          "range": ["#7881ff", "#ff7f78", "#f5d34c"]
        },
        "legend" : null
      },
      "tooltip": [
        {"field": "Result", "type": "nominal", "title": "Result"},
        {"field": "count", "type": "quantitative", "title": "Count"}
      ]
    }
  }
  
