{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Attendance VS Weather Condition",
    "color": "#ffffff", 
    "font": "Garamond",
    "fontSize": 25
  },
  "background": "#123499",
  "data": {
    "url": "https://raw.githubusercontent.com/knel0004/FIT3179A2/refs/heads/main/kaggle_afllocation.csv",
    "format": {
      "type": "csv",
      "parse": {"MinTemp": "number", "MaxTemp": "number", "Rainfall": "number"}
    }
  },
  "width": 800,
  "height": 400,
  "transform": [
    {
      "filter": "datum.AwayTeam == SelectedTeam"
    },
    {
      "calculate": "toNumber(replace(datum.Attendance, ',', ''))",
      "as": "Attendance"
    },
    
    {"window": [{"op": "count", "as": "index"}]},
    {"fold": ["MinTemp", "MaxTemp", "Rainfall", "Attendance"]},
    {
      "joinaggregate": [
        {"op": "min", "field": "value", "as": "min"},
        {"op": "max", "field": "value", "as": "max"}
      ],
      "groupby": ["key"]
    },
    {
      "calculate": "(datum.value - datum.min) / (datum.max - datum.min)",
      "as": "norm_val"
    }
  ],
  "params": [
    {
      "name": "SelectedTeam",
      "value": "Adelaide",  
      "bind": {
        "input": "select",
        "options": [
          "Greater Western Sydney", "Carlton", "Sydney", "Collingwood", "Richmond", "Geelong",
          "Melbourne", "Essendon", "Hawthorn", "North Melbourne", "Fremantle",
          "Gold Coast", "Adelaide", "St Kilda", "West Coast", "Port Adelaide", "Western Bulldogs"
        ],
        "name": "Select Team: "
      }
    }
  ],
  "layer": [
    {
      "mark": {"type": "rule", "color": "lightgrey"},
      "encoding": {
        "detail": {"aggregate": "count"},
        "x": {"field": "key"}
      }
    },
    {
      "mark": {"type":"line","color":"darkorange","size": 3},
      "encoding": {
        "detail": {"field": "index"},
        "opacity": {"value": 0.3},
        "x": {"type": "nominal", "field": "key"},
        "y": {"type": "quantitative", "field": "norm_val", "axis": null},
        "tooltip": [{
        "type": "nominal",
        "field": "AwayTeam",
        "title": "Team"
      }, {
        "type": "quantitative",
        "field": "Year"
      }, {
        "type": "quantitative",
        "field": "Attendance"
      }, {
        "type": "quantitative",
        "field": "MaxTemp",
        "title": "Maximum Temperature"
      },{
        "type": "quantitative",
        "field": "MinTemp",
        "title": "Minimum Temperature"

      },{
        "type": "quantitative",
        "field": "Rainfall"
      }
      ]
        
      }
      
    },
    {
      "encoding": {
        "x": {"type": "nominal", "field": "key","axis": {"labelColor":"white","labelFont": "Garamond","title" : "Attribute", "titleColor": "white"}},
        "y": {"value": 0}
      },
      "layer": [
        {
          "mark": {"type": "text", "style": "label", "color":"white", "font": "Garamond"},
          "encoding": {
            "text": {"aggregate": "max", "field": "max"}
          }
        }
      ]
    }
  ]
}
